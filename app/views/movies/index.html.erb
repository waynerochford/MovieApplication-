<h1>Movies</h1>
<br>
<table class="catalog">
<% @movies.each do |movie| %>
 <tr>
 <td>
 <div class="image">
 <%= link_to (image_tag movie.image_url, :style => "height:100px"), movie %>
 </div>
 </td>
 <td>
 <div class="title">
 <%= link_to movie.title, movie %>
 </div>
 <div class="description">
 <%=h movie.description %>
 </div>

 <div class="cast">
 <%=h movie.cast %>
 </div>

 <div class="releaseyear">
 <%=h movie.release_year %>
 </div>

 <div class="genre">
 <%=h movie.genre %>
 </div>

 <div class="links">
 <%= link_to 'Edit', edit_movie_path(movie) %> |
 <%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %>
 </div>

 </td>
 </tr>
<% end %>
</table>
<p><%= link_to 'New movie', new_movie_path %></p>
